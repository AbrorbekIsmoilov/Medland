<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle_r10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_accepted_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center"
            android:text="Hurmatli bemor !"
            android:textColor="@color/gray_text_color2"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/succes_badge_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/verification_badge" />

        <TextView
            android:id="@+id/order_accepted_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="center"
            android:text="Hamshira sizning buyurtmangizni qabul qildi."
            android:textColor="@color/black_text_color2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/pay_line"
            app:layout_constraintTop_toBottomOf="@+id/pay_line" />

        <View
            android:id="@+id/order_accepted_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_accepted_distance_from_you_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center|start"
                android:text="Sizdan uzoqlik masofasi"
                android:textColor="@color/black_text_color2"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/pay_line"
                app:layout_constraintTop_toBottomOf="@+id/pay_line" />

            <TextView
                android:id="@+id/order_accepted_distance_from_you_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_bold"
                android:gravity="center|end"
                android:text="15 km"
                android:textColor="@color/blue_color"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/pay_line"
                app:layout_constraintTop_toBottomOf="@+id/pay_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/estimated_time_of_arrival_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center|start"
                android:text="Taxminiy yetib kelish vaqti"
                android:textColor="@color/black_text_color2"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/pay_line"
                app:layout_constraintTop_toBottomOf="@+id/pay_line" />

            <TextView
                android:id="@+id/estimated_time_of_arrival_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_bold"
                android:gravity="center|end"
                android:text="15 min"
                android:textColor="@color/blue_color"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/pay_line"
                app:layout_constraintTop_toBottomOf="@+id/pay_line" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/close_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_btn_390_50"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:text="Tushunarli"
        android:textColor="@color/black_text_color2"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
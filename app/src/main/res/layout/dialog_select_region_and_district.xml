<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/main_background"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/select_region_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="Viloyatingizni tanlang :"
            android:textColor="@color/black_text_color2"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dialog_select_region_spinner_background"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_input_388_70"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_region_title" />

        <Spinner
            android:id="@+id/dialog_select_region_spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_select_region_spinner_background"
            app:layout_constraintEnd_toEndOf="@+id/dialog_select_region_spinner_background"
            app:layout_constraintStart_toStartOf="@+id/dialog_select_region_spinner_background"
            app:layout_constraintTop_toTopOf="@+id/dialog_select_region_spinner_background" />

        <TextView
            android:id="@+id/select_district_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="Tumaningizni tanlang :"
            android:textColor="@color/black_text_color2"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_select_region_spinner_background" />

        <View
            android:id="@+id/dialog_select_district_spinner_background"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_input_388_70"
            app:layout_constraintEnd_toEndOf="@+id/dialog_select_region_spinner_background"
            app:layout_constraintStart_toStartOf="@+id/dialog_select_region_spinner_background"
            app:layout_constraintTop_toBottomOf="@+id/select_district_title" />

        <Spinner
            android:id="@+id/dialog_select_district_spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_select_district_spinner_background"
            app:layout_constraintEnd_toEndOf="@+id/dialog_select_district_spinner_background"
            app:layout_constraintStart_toStartOf="@+id/dialog_select_district_spinner_background"
            app:layout_constraintTop_toTopOf="@+id/dialog_select_district_spinner_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/dialog_select_district_spinner_background"
            app:layout_constraintStart_toStartOf="@+id/dialog_select_district_spinner_background"
            app:layout_constraintTop_toBottomOf="@+id/dialog_select_district_spinner_background">

            <TextView
                android:id="@+id/get_region_dialog_dismiss_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_r14"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/gilroy_bold"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Bekor qilish"
                android:textColor="@color/black_text_color2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/selected_region_and_district_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_r14"
                android:backgroundTint="@color/blue_color"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/gilroy_bold"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Belgilash"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
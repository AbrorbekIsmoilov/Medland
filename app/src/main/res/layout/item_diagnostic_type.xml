<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_item_in_categories_390_100">

    <ImageView
        android:id="@+id/diagnostic_type_img"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_online" />

    <TextView
        android:id="@+id/diagnostic_type_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Usul boâ€™yicha diagnostika"
        android:textColor="@color/black_text_color2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/diagnostic_type_img"
        app:layout_constraintTop_toTopOf="@+id/diagnostic_type_img" />

    <TextView
        android:id="@+id/diagnostic_type_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
        android:textColor="@color/gray_text_color2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/diagnostic_type_title"
        app:layout_constraintTop_toBottomOf="@+id/diagnostic_type_title" />
</androidx.constraintlayout.widget.ConstraintLayout>
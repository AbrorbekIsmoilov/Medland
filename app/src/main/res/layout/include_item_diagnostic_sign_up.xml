<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/come_home_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_btn_390_50"
        android:ems="10"
        android:fontFamily="@font/gilroy_medium"
        android:hint="Ismingiz"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@color/black_text_color2"
        android:textColorHint="@color/gray_text_color2"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/come_home_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_btn_390_50"
        android:ems="10"
        android:fontFamily="@font/gilroy_medium"
        android:hint="Familyangiz"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@color/black_text_color2"
        android:textColorHint="@color/gray_text_color2"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/come_home_gen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_btn_390_50"
        android:ems="10"
        android:fontFamily="@font/gilroy_medium"
        android:hint="Jinsingiz"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@color/black_text_color2"
        android:textColorHint="@color/gray_text_color2"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/come_home_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_btn_390_50"
        android:ems="10"
        android:fontFamily="@font/gilroy_medium"
        android:hint="Yoshingiz"
        android:inputType="numberSigned"
        android:paddingStart="15dp"
        android:textColor="@color/black_text_color2"
        android:textColorHint="@color/gray_text_color2"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/come_home_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_btn_390_50"
        android:ems="10"
        android:fontFamily="@font/gilroy_medium"
        android:hint="Yashash manzilingiz"
        android:paddingStart="15dp"
        android:textColor="@color/black_text_color2"
        android:textColorHint="@color/gray_text_color2"
        android:textSize="16sp" />
</LinearLayout>
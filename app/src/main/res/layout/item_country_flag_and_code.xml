<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_background"
    android:backgroundTint="#B3FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/coountry_flag"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag_uzb" />

    <TextView
        android:id="@+id/country_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Uzbekistan"
        android:textColor="@color/black_text_color2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/coountry_flag"
        app:layout_constraintEnd_toStartOf="@+id/country_phone_code"
        app:layout_constraintStart_toEndOf="@+id/coountry_flag"
        app:layout_constraintTop_toTopOf="@+id/coountry_flag" />

    <TextView
        android:id="@+id/country_phone_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/gilroy_bold"
        android:textColor="@color/black_text_color2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/country_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/country_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
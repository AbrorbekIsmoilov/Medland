<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".presentation.fragment.splashFragment.SplashFragment">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/splash_heart_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/splash_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/splash_logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_color1"
            android:textSize="36sp"
            android:fontFamily="@font/gilroy_bold"
            android:text="MED"/>

        <com.med.medland.presentation.fragment.otherComponents.TextViewOutline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:text="LAND"
            android:textColor="@color/transparent"
            app:outlineColor="@color/black_text_color1"
            android:textSize="35sp"
            app:outlineSize="1dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
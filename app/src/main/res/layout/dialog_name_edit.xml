<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="creditCardExpirationDay"
        android:padding="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:lapDuration="2000"
        app:loaderWidth="3dp"
        app:reverseEffect="true"
        app:chipCornerRadius="15dp"
        app:layout_constraintVertical_bias="0.4">

        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="Full name"
            android:inputType="text"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <com.abhinav.chouhan.loaderchip.LoaderChip
            android:id="@+id/btn_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_btn_390_50"
            android:backgroundTint="@color/blue_color"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/white"
            app:loaderColor="@color/ic_launcher_background"
            android:textSize="20sp"
            app:lapDuration="2000"
            app:loaderWidth="3dp"
            app:loadOnClick="true"
            app:reverseEffect="true"
            app:chipCornerRadius="15dp"
            app:layout_constraintVertical_bias="0.4"/>

    </com.google.android.material.textfield.TextInputLayout>


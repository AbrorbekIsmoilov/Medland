<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_390_217"
    android:backgroundTint="#B3FFFFFF">

    <ImageView
        android:id="@+id/image_item_doctor"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_item_doctor"
        app:srcCompat="@drawable/doctor_image_one" />

    <TextView
        android:id="@+id/tv_name_item_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="Izzatillo Umarov"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/image_item_doctor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_connection_status_item_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="(online)"
        android:textColor="@color/blue_color"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_item_doctor"
        app:layout_constraintStart_toEndOf="@+id/tv_name_item_doctor"
        app:layout_constraintTop_toTopOf="@+id/tv_name_item_doctor" />

    <ImageView
        android:id="@+id/ic_briefcase_item_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_name_item_doctor"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_item_doctor"
        app:srcCompat="@drawable/ic_briefcase" />

    <TextView
        android:id="@+id/tv_type_clinic_item_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Andrologist     MDM Clinic"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ic_briefcase_item_doctor"
        app:layout_constraintStart_toEndOf="@+id/ic_briefcase_item_doctor"
        app:layout_constraintTop_toTopOf="@+id/ic_briefcase_item_doctor" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_140_50"
        android:drawableTint="@color/blue_color"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:text="Tuesday, 1 - Jan"
        android:textColor="@color/blue_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ic_briefcase_item_doctor"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_clinic_item_doctor" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_140_50"
        android:backgroundTint="#3350D33B"
        android:drawableTint="@color/blue_color"
        android:fontFamily="@font/gilroy_medium"
        android:gravity="center"
        android:text="Completed"
        android:textColor="#50D33B"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_clinic_item_doctor" />



</androidx.constraintlayout.widget.ConstraintLayout>
